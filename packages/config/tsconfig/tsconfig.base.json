{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
    "noEmit": true,
    "outDir": "compiled",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "target": "ES6",
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@29cm/ui-emotion": ["../../ui/emotion/src"]
    }
  },
  // Storybook
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
